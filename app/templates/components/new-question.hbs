{{#if addNewQuestion}}
  <h1>New City</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="question">Question</label>
          {{textarea value=question id="question"}}
        </div>

        <div class="form-group">
          <label for="user">User</label>
          {{input value=user id="user"}}
        </div>
        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" type="date"}}
        </div>

        <button {{action 'saveQuestionCp'}}>Save</button>
      </form>
    </div>
{{else}}
  <button {{action 'showQuestionForm'}}>Ask a question</button>
{{/if}}
